{
  "app": {
    "name": "project-empress-web",
    "version": "0.0.1",
    "build": "1"
  },
  "private": true,
  "main": "main.js",
  "engines": {
    "node": ">=6",
    "npm": ">=3.8"
  },
  "scripts": {
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src/; exit 0",
    "lint:css": "stylelint ./src/**/*.css",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "npm run build:prod",
    "build:dev": "NODE_ENV=development node -r babel-register tools/build.js",
    "build:prod": "NODE_ENV=production node -r babel-register tools/build.js",
    "clean": "rm -rf build && rm -rf release",
    "start": "npm run start:web:dev --",
    "start:web:dev": "NODE_ENV=development node -r babel-register tools/web/server",
    "start:web:prod": "NODE_ENV=production node -r babel-register tools/web/server",
    "start:app": "npm run start:app:dev --",
    "start:app:dev": "electron -r babel-register ./tools/electron/main.js",
    "start:server": "npm run start:server:dev --",
    "start:server:dev": "NODE_ENV=development node -r babel-register tools/electron/server.js --target app",
    "package": "NODE_ENV=production node -r babel-register tools/electron/package.js",
    "check": "npm outdated --depth=0",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "apollo-client": "^1.2.2",
    "draft-convert": "^1.4.2",
    "draft-js": "^0.10.0",
    "draft-js-inline-toolbar-plugin": "^2.0.0-beta10",
    "draft-js-plugins-editor": "^2.0.0-beta10",
    "fastclick": "1.0.6",
    "graphql-tag": "^2.1.0",
    "history": "4.6.1",
    "immutable": "^3.8.1",
    "moment": "^2.18.1",
    "react": "^15.4.2",
    "react-apollo": "^1.2.0",
    "react-dom": "^15.4.2",
    "react-html-parser": "^1.0.3",
    "react-masonry-component": "^5.0.5",
    "react-redux": "^5.0.4",
    "react-remarkable": "^1.1.1",
    "react-router": "3.0.1",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "remarkable": "^1.7.1",
    "repeat-element": "^1.1.2",
    "save": "^2.3.0",
    "styled-components": "^1.4.6",
    "whatwg-fetch": "2.0.1",
    "zen-editor": "^0.1.8"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.35.3",
    "babel-cli": "6.24.1",
    "babel-core": "6.24.1",
    "babel-eslint": "7.2.3",
    "babel-helper-bindify-decorators": "^6.24.1",
    "babel-jest": "20.0.3",
    "babel-loader": "7.0.0",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-transform-react-constant-elements": "6.23.0",
    "babel-plugin-transform-react-inline-elements": "6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.5",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-polyfill": "6.23.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-es2015-webpack": "6.4.3",
    "babel-preset-react": "6.24.1",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-1": "6.24.1",
    "babel-register": "6.24.1",
    "babel-runtime": "6.23.0",
    "browser-sync": "2.18.12",
    "connect-history-api-fallback": "1.3.0",
    "css-loader": "0.28.2",
    "electron": "1.4.14",
    "electron-packager": "8.5.0",
    "enzyme": "^2.7.1",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "15.0.1",
    "eslint-import-resolver-webpack": "0.8.0",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "5.0.3",
    "eslint-plugin-react": "7.0.1",
    "express": "4.14.0",
    "file-loader": "0.11.1",
    "flow-bin": "^0.46.0",
    "flow-typed": "^2.0.0",
    "html-loader": "0.4.4",
    "html-webpack-plugin": "^2.28.0",
    "jest": "20.0.3",
    "json-loader": "0.5.4",
    "postcss-cssnext": "2.9.0",
    "postcss-focus": "1.0.0",
    "postcss-loader": "^1.2.2",
    "postcss-reporter": "3.0.0",
    "postcss-variables-loader": "^2.1.3",
    "react-addons-test-utils": "15.5.1",
    "react-hot-loader": "1.3.1",
    "react-test-renderer": "15.5.4",
    "redux-mock-store": "^1.2.1",
    "sinon": "2.3.0",
    "style-loader": "0.18.0",
    "stylelint": "7.10.1",
    "stylelint-config-standard": "16.0.0",
    "url-loader": "0.5.7",
    "webpack": "1.14.0",
    "webpack-bundle-analyzer": "^2.8.2",
    "webpack-dev-middleware": "1.9.0",
    "webpack-hot-middleware": "2.15.0",
    "webpack-manifest-plugin": "^1.1.0",
    "webpack-target-electron-renderer": "0.4.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/src/js/components/Editor"
    ],
    "setupFiles": [
      "<rootDir>/tools/tests/mocks/localStorage.js",
      "<rootDir>/tools/tests/mocks/url.js"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/tests/mocks/fileMock.js",
      "^.+\\.(css|less)$": "<rootDir>/tools/tests/mocks/styleMock.js"
    }
  }
}
