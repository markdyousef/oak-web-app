{
  "private": true,
  "engines": {
    "node": ">=6",
    "npm": ">=3.8"
  },
  "scripts": {
    "eslint": "eslint components core routes test tools",
    "stylelint": "stylelint \"components/**/*.css\" \"routes/**/*.css\"",
    "lint": "npm run eslint && npm run stylelint",
    "test": "mocha --compilers js:babel-register",
    "test:watch": "mocha --compilers js:babel-register --reporter min --watch",
    "clean": "rm -r build/*",
    "build": "node tools/build --release",
    "build:debug": "node tools/build",
    "build:test": "npm run clean && NODE_ENV=production webpack --config tools/webpack.prod.config.js --color -p",
    "start": "node tools/start"
  },
  "dependencies": {
    "babel-cli": "*",
    "babel-core": "*",
    "babel-eslint": "*",
    "babel-loader": "*",
    "babel-polyfill": "*",
    "babel-preset-es2015": "*",
    "babel-preset-react": "*",
    "babel-preset-stage-1": "6.5.0",
    "browser-sync": "2.12.8",
    "chai": "*",
    "css-loader": "*",
    "eslint": "*",
    "eslint-config-airbnb": "*",
    "eslint-import-resolver-webpack": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-jsx-a11y": "*",
    "eslint-plugin-react": "*",
    "fastclick": "*",
    "file-loader": "*",
    "history": "*",
    "html-loader": "0.4.3",
    "html-webpack-plugin": "2.17.0",
    "json-loader": "*",
    "mocha": "*",
    "react": "*",
    "react-dom": "*",
    "react-hot-loader": "*",
    "react-redux": "*",
    "react-router": "2.4.1",
    "redux": "*",
    "style-loader": "*",
    "stylelint": "*",
    "stylelint-config-standard": "*",
    "url-loader": "*",
    "webpack": "*",
    "webpack-dev-middleware": "*",
    "webpack-hot-middleware": "*"
  }
}
