{
  "private": true,
  "engines": {
    "node": ">=6",
    "npm": ">=3.8"
  },
  "scripts": {
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src/; exit 0",
    "lint:css": "stylelint ./src/**/*.css",
    "test": "mocha src/**/*.spec.js --compilers js:babel-register --recursive --require ./tools/test-helper.js; exit 0",
    "test:watch": "mocha src/**/*.spec.js --compilers js:babel-register --recursive --require ./tools/test-helper.js --watch; exit 0",
    "build": "npm run build:prod",
    "build:dev": "npm run clean && webpack --config tools/webpack/dev.config.js --color",
    "build:prod": "npm run clean && NODE_ENV=production webpack --config tools/webpack/prod.config.js --color -p",
    "clean": "rm -rf build/*",
    "start": "npm run start:dev",
    "start:dev": "NODE_ENV=development node tools/start",
    "start:prod": "NODE_ENV=production node tools/start"
  },
  "dependencies": {
    "babel-core": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-react-constant-elements": "^6.8.0",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.7",
    "babel-polyfill": "*",
    "babel-preset-es2015": "*",
    "babel-preset-es2015-webpack": "^6.4.1",
    "babel-preset-react": "*",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-1": "6.5.0",
    "babel-register": "^6.9.0",
    "browser-sync": "2.12.8",
    "chai": "^3.5.0",
    "css-loader": "*",
    "enzyme": "^1.2.0",
    "eslint": "^2.10.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-import-resolver-webpack": "^0.2.4",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.1.1",
    "fastclick": "*",
    "file-loader": "*",
    "history": "*",
    "html-loader": "0.4.3",
    "html-webpack-plugin": "2.17.0",
    "json-loader": "*",
    "mocha": "^2.5.1",
    "react": "*",
    "react-addons-test-utils": "^15.1.0",
    "react-dom": "*",
    "react-hot-loader": "*",
    "react-redux": "*",
    "react-router": "2.4.1",
    "redux": "*",
    "sinon": "^1.17.4",
    "style-loader": "*",
    "stylelint": "*",
    "stylelint-config-standard": "*",
    "url-loader": "*",
    "webpack": "*",
    "webpack-dev-middleware": "*",
    "webpack-hot-middleware": "*"
  }
}
